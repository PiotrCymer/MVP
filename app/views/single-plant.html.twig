{% extends "index.html.twig" %}

{% use "widgets.html.twig" %}
{% block body %}

    {{ parent() }}

    <div class="container">
        <div class="row sp-section" id="product">
            <div class="col-lg-6 col-md-12">
                <img class="sp-image" src="http://projekt.dev.cymer.pl/timthumb.php?src=/assets{{singlePlant.img}}&w=500&h=500"/>
            </div>
            <div class="col-lg-6 col-md-12 sp-info">
                <div class="sp-title">
                    <h1>{{ singlePlant.name }}</h1>
                </div>
                <div class="sp-details">

                    <table id="sp-table">
                        <tr>
                            <td id="type">
                                Rodzaj:
                            </td>
                            <td>Rośliny pionowe</td>
                        </tr>
                        <tr>
                            <td>
                                Nasłonecznienie:
                            </td>
                            <td id="insolation">
                                <i class="fas fa-sun"></i>
                                <i class="fas fa-sun {% if singlePlant.insolation < 2 %} product-param-color {% endif %}"></i>
                                <i class="fas fa-sun {% if singlePlant.insolation < 3 %} product-param-color {% endif %}"></i>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Wilgotność:
                            </td>
                            <td id="humidity">
                                <i class="fas fa-tint"></i>
                                <i class="fas fa-tint {% if singlePlant.humidity < 2 %} product-param-color {% endif %}"></i>
                                <i class="fas fa-tint {% if singlePlant.humidity < 3 %} product-param-color {% endif %}"></i>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Temperatura:
                            </td>
                            <td id="temperature">
                                <i class="fas fa-thermometer-full"></i>
                                <i class="fas fa-thermometer-full {% if singlePlant.temperature < 2 %} product-param-color {% endif %}"></i>
                                <i class="fas fa-thermometer-full {% if singlePlant.temperature < 3 %} product-param-color {% endif %}"></i>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Trudność:
                            </td>
                            <td id="difficulty">
                                <i class="fas fa-circle"></i>
                                <i class="fas fa-circle {% if singlePlant.difficulty < 2 %} product-param-color {% endif %}"></i>
                                <i class="fas fa-circle {% if singlePlant.difficulty < 3 %} product-param-color {% endif %}"></i>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <div class="row sp-description">
            <div class="col-md-12">
                <div class="sp-description-title">
                    <h1>Opis</h1>
                </div>
                <div class="col-md-12 sp-description-content">
                    {{singlePlant.description}}
                </div>
            </div>
        </div>
        {% block categories %}
            {{parent()}}
        {% endblock %}
    </div>

{% endblock %}
